    <script>
        const precioUnitario = 1200
        const nombreProducto = "alfajores"
        let cantidadDeseada = prompt("¿Qué cantidad de " + (nombreProducto) + " por $" + (precioUnitario) + " c/u desea comprar?")
        let costoTotal = (precioUnitario) * (cantidadDeseada)
        alert("El costo total de su compra sería de $" + (costoTotal))

    </script>                                        
